<h2 class="mt-5">Grilla de Programas</h2>

<div class="d-flex flex-wrap row-cols-1 row-cols-md-4 g-4">
    {{#each programas}}
        <div class="col card">
                <img src="{{ imageLink }}" class="card-img-top" alt="Program Image" height="240" >
                <div class="card-body">
                    <h3 class="card-title">{{ name }} </h3>
                    <p class="card-text">( {{ category }} ) - {{ host }}</p>
                    <ul class="list-group list-group-flush">
                    <a href="/detalles/{{id}}"><button>Ver mas</button></a>
                    </ul>
            </div>
        </div>
    {{/each}}
</div>


