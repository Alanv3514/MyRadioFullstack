<h2 class="mt-5">Grilla de Programas</h2>

<div class="d-flex flex-wrap row-cols-1 row-cols-md-3 g-4">
    {{#each programas}}
        <div class="col">
            <div class="card h-100">
                <img src="{{ imageLink }}" class="card-img-top" alt="Program Image">
                <div class="card-body">
                    <h3 class="card-title">{{ name }}</h3>
                    <p class="card-text">{{ description }}</p>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Horario: {{ schedule }}</li>
                        <li class="list-group-item">Categoria: {{ category }}</li>
                        <li class="list-group-item">Host: {{ host }}</li>
                    </ul>
                </div>
            </div>
        </div>
    {{/each}}
</div>
